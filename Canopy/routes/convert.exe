#!/bin/bash

while getopts p:d: option
do
case "${option}"
in
p) export base_str=${OPTARG};;
d) export path=${OPTARG};;
esac
done
export base_str=$(cat $file)
requestPath="request.json"
echo "
  {
    'payload':
      {
        'image':
          {
            'imageBytes': '$base_str'
          }

      }

  }

" > "$path/$requestPath"
echo ("$path/$requestPath")


